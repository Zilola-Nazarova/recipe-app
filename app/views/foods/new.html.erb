<h1 class="mt-4 mb-4">Add Food Details</h1>

<%= form_for @food, html: { class: 'form p-2' } do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :measurement_unit %>
    <%= f.text_field :measurement_unit, id: 'food_measurement_unit', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.text_field :quantity, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Create Food", class: 'btn btn-primary mt-2' %>
  </div>
<% end %>
