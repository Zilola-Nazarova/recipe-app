<div class="container">
  <h1 class="mt-4 mb-4 text-center">Edit Ingredient</h1>

  <% flash.each do |name, msg| -%>
    <%= content_tag :div, msg, class: "alert alert-#{name}" %>
  <% end -%>

  <%= form_with url: recipe_recipe_food_path, method: :patch, model: @recipe_food, class: 'form' do |form| %>
    <div class="form-group">
      <%= form.label :quantity %>
      <%= form.number_field :quantity, min: 1, required: true, class: 'form-control' %>
    </div>

    <div class="form-group mt-2">
      <%= form.label :food_id %>
      <%= form.collection_select :food_id, current_user.foods, :id, :name, { include_blank: false }, class: 'form-control' %>
    </div>

    <div class="form-group mt-2">
      <%= form.submit "Update", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
